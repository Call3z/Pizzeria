@model Pizzeria.Models.CartDish
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h1>@Model.Name</h1>
<h2>@(Model.Price + Model.ExtraIngredients.Where(x=> x.Selected).Sum(x=> x.Price)) SEK</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input asp-for="@Model.Id" type="hidden" value="@Model.Id"/>
            <div class="form-group">
                <p>Included:</p>
                @for(var i = 0; i < Model.IncludedIngredients.Count; i++)
                {
                    <label>@Model.IncludedIngredients[i].Name</label>
                    <input asp-for="@Model.IncludedIngredients[i].Selected" type="checkbox"/>
                    <input asp-for="@Model.IncludedIngredients[i].Id" type="hidden" value="@Model.IncludedIngredients[i].Id" />
                    <input asp-for="@Model.IncludedIngredients[i].Name" type="hidden" value="@Model.IncludedIngredients[i].Name" />
                }
                <br />
                <p>Extras:</p>
                @for (var i = 0; i < Model.ExtraIngredients.Count; i++)
                {
                    <label>@Model.ExtraIngredients[i].Name</label>
                    <input asp-for="@Model.ExtraIngredients[i].Selected" type="checkbox" />
                    <input asp-for="@Model.ExtraIngredients[i].Id" type="hidden" value="@Model.ExtraIngredients[i].Id" />
                    <input asp-for="@Model.ExtraIngredients[i].Name" type="hidden" value="@Model.ExtraIngredients[i].Name" />
                    <input asp-for="@Model.ExtraIngredients[i].Price" type="hidden" value="@Model.ExtraIngredients[i].Price" />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
