@model Pizzeria.Models.CheckOutViewModels.PaymentViewModel
@{
    ViewData["Title"] = "Pay";
}

<h2>Pay - Total: @Model.OrderTotal</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Payment" asp-action="Pay" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip"></label>
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Card Type</label>
                <input type="radio" name="cardtype" value="1" />Visa
                <input type="radio" name="cardtyoe" value="2" />Mastercard
            </div>
            <div class="form-group">
                <label asp-for="CardNumber"></label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cvc"></label>
                <input asp-for="Cvc" class="form-control" />
                <span asp-validation-for="Cvc" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Pay</button>
        </form>
    </div>
</div>